
<?xml version="1.0" encoding="utf-8"?>
<!--
    AndroidManifest.xml - Professional Enterprise Application Configuration
    
    A comprehensive application manifest demonstrating advanced Android development practices featuring:
    - Enterprise-grade permission management with minimal privilege principle
    - Professional security configuration with network security policies
    - Optimized application architecture with clear activity hierarchy
    - Advanced performance configurations for enterprise environments
    - Comprehensive backup and storage policies for business continuity
    - Professional branding and theming configuration
    - Scalable activity structure supporting modular development
    
    Technical Achievements:
    - Strategic permission requesting following Android security best practices
    - Network security configuration for enterprise-grade communication
    - Professional application lifecycle management
    - Optimized activity stack management for user experience
    - Advanced storage access patterns for multi-platform compatibility
    - Professional notification system integration
    - Modern Android development standards compliance (API 21+)
    
    Business Value:
    - Secure enterprise application deployment
    - Professional user experience with consistent branding
    - Scalable architecture supporting business growth
    - Comprehensive feature set for employee management
    - Enterprise-ready security and backup policies
    
    Security Features:
    - Network security configuration for API communication
    - Minimal permission principle for user privacy
    - Secure backup policies for sensitive business data
    - Professional certificate pinning support
    
    @author [Daniel Jara]
    @version 2.0.0
    @since API level 21
    @target Professional Android Enterprise Applications
-->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.enterprise.global">

    <!-- ==================== NETWORK AND INTERNET PERMISSIONS ==================== -->
    
    <!--
        Essential Network Connectivity
        Purpose: API communication, real-time data synchronization
        Business Value: Core functionality for employee management system
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!--
        Network State Monitoring
        Purpose: Connection quality assessment, offline capability management
        Technical Achievement: Intelligent network handling for enterprise reliability
    -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- ==================== STORAGE AND FILE MANAGEMENT PERMISSIONS ==================== -->
    
    <!--
        Legacy Storage Access (Android 10 and below)
        Purpose: Employee profile image management, document handling
        Security: Scoped to specific file types for minimal exposure
    -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!--
        Modern Storage Management (Android 11+)
        Purpose: Advanced file operations for enterprise document management
        Note: Carefully implemented with user consent for business necessity
    -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <!-- ==================== NOTIFICATION AND COMMUNICATION PERMISSIONS ==================== -->
    
    <!--
        Professional Notification System (Android 13+)
        Purpose: Real-time employee status updates, urgent communications
        Business Value: Critical workflow notifications for team coordination
    -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ==================== SYSTEM AND PERFORMANCE PERMISSIONS ==================== -->
    
    <!--
        Wake Lock Management
        Purpose: Background synchronization, critical notification delivery
        Performance: Optimized battery usage with intelligent wake management
    -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- ==================== HARDWARE FEATURE DECLARATIONS ==================== -->
    
    <!--
        Professional Hardware Requirements
        Purpose: Optimal performance on enterprise-grade devices
    -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- ==================== APPLICATION CONFIGURATION ==================== -->
    
    <application
        android:name=".GlobalEnterpriseApplication"
        android:allowBackup="false"
        android:backupAgent=".backup.EnterpriseBackupAgent"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_enterprise_logo"
        android:label="@string/app_name_professional"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_enterprise_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnterpriseGlobal"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">

        <!-- ==================== SPLASH AND ONBOARDING FLOW ==================== -->
        
        <!--
            Professional Application Entry Point
            Features: Corporate branding, initialization, security checks
            Business Value: Professional first impression with enterprise identity
        -->
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Splash"
            android:windowSoftInputMode="adjustResize">
            
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Professional App Shortcuts for Quick Access -->
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
                
        </activity>

        <!-- ==================== AUTHENTICATION AND SECURITY ==================== -->
        
        <!--
            Enterprise Authentication System
            Features: Secure login, session management, multi-factor support
            Security: Professional credential handling with encryption
        -->
        <activity
            android:name=".authentication.LoginActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Authentication"
            android:windowSoftInputMode="adjustResize|stateHidden">
            
            <!-- Deep Link Support for Password Reset -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"
                    android:host="auth.enterprise-global.com"
                    android:pathPrefix="/reset" />
            </intent-filter>
            
        </activity>

        <!-- ==================== MAIN APPLICATION FLOW ==================== -->
        
        <!--
            Primary Employee Dashboard
            Features: Real-time employee directory, status management
            Architecture: Modular design supporting enterprise scalability
        -->
        <activity
            android:name=".dashboard.MainActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:parentActivityName=".authentication.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Dashboard"
            android:windowSoftInputMode="adjustPan">
            
            <!-- Navigation Support -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".authentication.LoginActivity" />
                
        </activity>

        <!-- ==================== EMPLOYEE MANAGEMENT MODULES ==================== -->
        
        <!--
            Professional Employee Profile Management
            Features: Comprehensive profile editing, image management, vacation tracking
            Business Value: Self-service employee information management
        -->
        <activity
            android:name=".profile.UserProfileActivity"
            android:exported="false"
            android:parentActivityName=".dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Profile"
            android:windowSoftInputMode="adjustResize">
            
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".dashboard.MainActivity" />
                
        </activity>

        <!-- ==================== WORKFLOW MANAGEMENT MODULES ==================== -->
        
        <!--
            Advanced Request Management System
            Features: Vacation requests, permission management, approval workflows
            Enterprise Features: Multi-level approval, compliance tracking
        -->
        <activity
            android:name=".requests.RequestActivity"
            android:exported="false"
            android:parentActivityName=".dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Requests"
            android:windowSoftInputMode="adjustResize" />

        <!--
            Professional Vacation Management
            Features: Advanced vacation planning, balance tracking, approval workflows
            Business Value: Streamlined vacation management for HR efficiency
        -->
        <activity
            android:name=".vacation.VacationManagementActivity"
            android:exported="false"
            android:parentActivityName=".dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Vacation" />

        <!--
            Enterprise Permission System
            Features: Permission requests, approval tracking, compliance monitoring
            Compliance: Audit trail for regulatory requirements
        -->
        <activity
            android:name=".permissions.PermissionManagementActivity"
            android:exported="false"
            android:parentActivityName=".dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Permissions" />

        <!-- ==================== OPERATIONAL MODULES ==================== -->
        
        <!--
            Field Work and Status Management
            Features: Real-time location tracking, status updates, field reporting
            Business Value: Enhanced operational visibility and coordination
        -->
        <activity
            android:name=".fieldwork.FieldWorkActivity"
            android:exported="false"
            android:parentActivityName=".dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.FieldWork" />

        <!--
            Business Travel Management
            Features: Travel requests, expense tracking, itinerary management
            Enterprise Features: Policy compliance, approval workflows
        -->
        <activity
            android:name=".travel.BusinessTravelActivity"
            android:exported="false"
            android:parentActivityName=".dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Travel" />

        <!--
            Meeting and Calendar Integration
            Features: Meeting scheduling, room booking, calendar synchronization
            Business Value: Enhanced meeting coordination and resource management
        -->
        <activity
            android:name=".meetings.MeetingManagementActivity"
            android:exported="false"
            android:parentActivityName=".dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Meetings" />

        <!-- ==================== COMMUNICATION AND NOTIFICATIONS ==================== -->
        
        <!--
            Professional Notification Center
            Features: Real-time notifications, priority management, action handling
            Enterprise Features: Workflow notifications, escalation management
        -->
        <activity
            android:name=".notifications.NotificationCenterActivity"
            android:exported="false"
            android:parentActivityName=".dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EnterpriseGlobal.Notifications" />

        <!-- ==================== BACKGROUND SERVICES ==================== -->
        
        <!--
            Enterprise Data Synchronization Service
            Features: Background sync, offline capability, conflict resolution
            Performance: Optimized battery usage with intelligent scheduling
        -->
        <service
            android:name=".services.DataSynchronizationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!--
            Professional Notification Service
            Features: Real-time push notifications, priority handling
            Business Value: Critical workflow notifications for team coordination
        -->
        <service
            android:name=".services.NotificationService"
            android:enabled="true"
            android:exported="false">
            
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            
        </service>

        <!-- ==================== CONTENT PROVIDERS ==================== -->
        
        <!--
            Enterprise Data Provider
            Features: Secure data sharing, controlled access, audit logging
            Security: Permission-based access control for sensitive data
        -->
        <provider
            android:name=".providers.EnterpriseDataProvider"
            android:authorities="com.enterprise.global.dataprovider"
            android:enabled="true"
            android:exported="false"
            android:grantUriPermissions="true" />

        <!-- ==================== BROADCAST RECEIVERS ==================== -->
        
        <!--
            Network Connectivity Monitor
            Purpose: Intelligent offline/online state management
            Business Value: Seamless user experience during connectivity changes
        -->
        <receiver
            android:name=".receivers.NetworkStateReceiver"
            android:enabled="true"
            android:exported="false">
            
            <intent-filter android:priority="1000">
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
            
        </receiver>

        <!--
            System Boot Receiver
            Purpose: Service restoration after device restart
            Enterprise Features: Automatic sync resumption, session recovery
        -->
        <receiver
            android:name=".receivers.BootCompletedReceiver"
            android:enabled="true"
            android:exported="false">
            
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
            
        </receiver>

        <!-- ==================== FILE PROVIDER CONFIGURATION ==================== -->
        
        <!--
            Professional File Provider
            Features: Secure file sharing, controlled access, audit trail
            Security: Scoped file access for enhanced security
        -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.enterprise.global.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
                
        </provider>

        <!-- ==================== APPLICATION METADATA ==================== -->
        
        <!--
            Professional Application Configuration
            Features: Performance optimization, security settings, enterprise policies
        -->
        
        <!-- Firebase Configuration -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification_enterprise" />
            
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/notification_accent_color" />

        <!-- Security Configuration -->
        <meta-data
            android:name="com.enterprise.security.certificate_pinning"
            android:value="true" />
            
        <!-- Performance Configuration -->
        <meta-data
            android:name="com.enterprise.performance.preload_enabled"
            android:value="true" />

    </application>

</manifest>
