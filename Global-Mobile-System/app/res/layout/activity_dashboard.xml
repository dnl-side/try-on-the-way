<!--
    activity_main.xml - Professional Employee Management Dashboard Layout
    
    A sophisticated main activity layout demonstrating advanced Android UI design featuring:
    - Responsive ConstraintLayout architecture with optimized performance
    - Professional Material Design components and accessibility standards
    - Advanced search and filtering capabilities with real-time updates
    - Intelligent notification system with expandable RecyclerView
    - Optimized SwipeRefreshLayout for enhanced user experience
    - Professional toolbar design with corporate branding
    - Scalable component hierarchy for enterprise applications
    
    Technical Achievements:
    - Advanced ConstraintLayout optimization for complex UI structures
    - Professional component organization with clear separation of concerns
    - Responsive design patterns supporting multiple screen densities
    - Accessibility-compliant component configuration
    - Performance-optimized RecyclerView implementation
    - Material Design Guidelines compliance for enterprise UX
    - Professional color scheme and typography implementation
    - Scalable layout architecture for business growth
    
    Business Value:
    - Intuitive employee directory interface for productivity enhancement
    - Real-time search capabilities for efficient team communication
    - Professional notification system for workflow management
    - Responsive design ensuring consistent experience across devices
    - Enterprise-grade user experience for professional environments
    
    UI/UX Patterns:
    - Material Design component integration for modern interface
    - Progressive disclosure with expandable notification panel
    - Consistent visual hierarchy with professional spacing
    - Optimized touch targets for mobile accessibility
    
    @author [Daniel Jara]
    @version 2.0.0
    @since API level 21
    @target Professional Android Enterprise Applications
-->

<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".main.MainActivity">

    <!-- ==================== HEADER SECTION ==================== -->
    
    <!--
        Professional Corporate Toolbar
        Features: Brand identity, navigation, accessibility compliance
        Performance: Optimized constraint chain for responsive layout
    -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_brand"
        android:elevation="@dimen/toolbar_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="@dimen/toolbar_content_inset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_enterprise_logo"
        app:title="@string/app_name_corporate"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:titleTextColor="@color/text_on_primary"
        tools:title="Enterprise Global - Employee Directory" />

    <!-- ==================== NOTIFICATION SECTION ==================== -->
    
    <!--
        Real-time Notification Panel
        Features: Expandable notification system, professional animations
        Architecture: Optimized RecyclerView with ViewHolder pattern
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_margin_horizontal"
        android:layout_marginTop="@dimen/content_margin_small"
        android:background="@drawable/notification_panel_background"
        android:clipToPadding="false"
        android:elevation="@dimen/notification_elevation"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        android:padding="@dimen/notification_panel_padding"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_main"
        tools:itemCount="3"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_notification"
        tools:visibility="visible" />

    <!-- ==================== SEARCH AND FILTER SECTION ==================== -->
    
    <!--
        Advanced Search Interface
        Features: Real-time search with debouncing, accessibility support
        Performance: Optimized query handling with professional UX
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_search_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_margin_horizontal"
        android:layout_marginTop="@dimen/content_margin_medium"
        app:cardCornerRadius="@dimen/search_card_corner_radius"
        app:cardElevation="@dimen/search_card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_notifications">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view_employees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/search_view_margin"
            android:background="@android:color/transparent"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:queryHint="@string/search_employees_hint"
            android:submitBackground="@android:color/transparent"
            app:closeIcon="@drawable/ic_search_clear"
            app:queryBackground="@android:color/transparent"
            app:searchIcon="@drawable/ic_search"
            tools:queryHint="Buscar empleado por nombre, Ã¡rea o estado..." />

    </com.google.android.material.card.MaterialCardView>

    <!--
        Department Filter Component
        Features: Professional dropdown with Material Design theming
        Accessibility: Proper labeling and touch target optimization
    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_department_filter"
        style="@style/Widget.MaterialComponents.TextInputLayout.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/content_margin_horizontal"
        android:layout_marginTop="@dimen/content_margin_medium"
        android:hint="@string/filter_by_department"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_search_container">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_department_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/all_departments"
            tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--
        Visual Separator with Professional Styling
        Purpose: Clear visual hierarchy and content organization
    -->
    <View
        android:id="@+id/separator_content"
        android:layout_width="0dp"
        android:layout_height="@dimen/separator_height"
        android:layout_marginHorizontal="@dimen/separator_margin_horizontal"
        android:layout_marginTop="@dimen/content_margin_medium"
        android:background="@drawable/gradient_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_department_filter" />

    <!-- ==================== MAIN CONTENT SECTION ==================== -->
    
    <!--
        Enhanced SwipeRefreshLayout Container
        Features: Professional pull-to-refresh with custom styling
        Performance: Optimized refresh handling with smooth animations
    -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/content_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_content">

        <!--
            Professional Employee Directory RecyclerView
            Features: Optimized scrolling, professional item animations
            Architecture: ViewHolder pattern with memory optimization
            Performance: Efficient data binding and smooth scrolling
        -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_employees"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/recycler_padding_horizontal"
            android:paddingTop="@dimen/recycler_padding_top"
            android:paddingBottom="@dimen/recycler_padding_bottom"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
            android:scrollbarTrackVertical="@drawable/scrollbar_track"
            app:fastScrollEnabled="true"
            app:fastScrollHorizontalThumbDrawable="@drawable/fast_scroll_thumb"
            app:fastScrollHorizontalTrackDrawable="@drawable/fast_scroll_track"
            app:fastScrollVerticalThumbDrawable="@drawable/fast_scroll_thumb"
            app:fastScrollVerticalTrackDrawable="@drawable/fast_scroll_track"
            tools:itemCount="25"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_employee_card"
            tools:orientation="vertical" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- ==================== FLOATING ACTION ELEMENTS ==================== -->
    
    <!--
        Professional Floating Action Button for Quick Actions
        Features: Material Design compliance, accessibility support
        Purpose: Quick employee addition or action shortcuts
    -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_quick_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:contentDescription="@string/quick_actions_description"
        android:src="@drawable/ic_quick_actions"
        android:visibility="gone"
        app:backgroundTint="@color/accent_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/text_on_accent"
        tools:visibility="visible" />

    <!-- ==================== LOADING AND EMPTY STATES ==================== -->
    
    <!--
        Professional Loading State Indicator
        Features: Smooth animations, brand-consistent styling
        UX: Clear feedback during data loading operations
    -->
    <LinearLayout
        android:id="@+id/layout_loading_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/loading_state_padding"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progress_bar_loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/progress_bar_size"
            android:layout_height="@dimen/progress_bar_size"
            android:indeterminateTint="@color/accent_primary" />

        <TextView
            android:id="@+id/text_loading_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loading_text_margin_top"
            android:text="@string/loading_employees"
            android:textAppearance="@style/TextAppearance.LoadingState"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <!--
        Professional Empty State Layout
        Features: Engaging empty state with clear action guidance
        UX: Professional messaging with constructive user guidance
    -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/empty_state_padding"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_empty_state"
            android:layout_width="@dimen/empty_state_image_size"
            android:layout_height="@dimen/empty_state_image_size"
            android:alpha="0.6"
            android:contentDescription="@string/empty_state_description"
            android:src="@drawable/ic_empty_employee_list"
            app:tint="@color/text_disabled" />

        <TextView
            android:id="@+id/text_empty_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/empty_state_text_margin"
            android:text="@string/empty_state_title"
            android:textAppearance="@style/TextAppearance.EmptyState.Title"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/text_empty_state_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/empty_state_subtitle_margin"
            android:gravity="center"
            android:text="@string/empty_state_subtitle"
            android:textAppearance="@style/TextAppearance.EmptyState.Subtitle"
            android:textColor="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_retry_loading"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/empty_state_button_margin"
            android:text="@string/retry_loading"
            android:textColor="@color/accent_primary"
            app:strokeColor="@color/accent_primary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
