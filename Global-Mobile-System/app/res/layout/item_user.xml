<?xml version="1.0" encoding="utf-8"?>
<!--
    item_employee_card.xml - Professional Employee Card Layout Component
    
    A sophisticated employee card design demonstrating advanced Android UI development featuring:
    - Complex expandable card architecture with smooth animations
    - Advanced ConstraintLayout optimization for responsive design
    - Professional Material Design component integration
    - Dynamic status visualization with circular progress indicators
    - Intelligent information disclosure with progressive reveal
    - Accessibility-compliant component structure and labeling
    - Professional theming system with dynamic color adaptation
    - Enterprise-grade communication integration (phone, WhatsApp)
    
    Technical Achievements:
    - Advanced ConstraintLayout chains for optimal performance
    - Custom circular progress bar integration with status correlation
    - Professional image handling with circular clipping
    - Dynamic text marquee implementation for overflow handling
    - Sophisticated expandable section with proper state management
    - Accessibility-optimized touch targets and content descriptions
    - Professional typography hierarchy with responsive text sizing
    - Advanced background theming with dynamic color adaptation
    
    Business Value:
    - Comprehensive employee information display for team management
    - Intuitive communication channels for enhanced productivity
    - Professional status visualization for real-time monitoring
    - Expandable design supporting both overview and detailed views
    - Enterprise-ready component for scalable applications
    
    UI/UX Patterns:
    - Progressive disclosure design pattern for information hierarchy
    - Material Design elevation and spacing guidelines compliance
    - Professional interaction states with clear visual feedback
    - Responsive layout supporting multiple screen densities
    
    @author [Daniel Jara]
    @version 2.0.0
    @since API level 21
    @target Professional Android Enterprise Applications
-->

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_employee_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/employee_card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/employee_card_corner_radius"
    app:cardElevation="@dimen/employee_card_elevation"
    app:strokeWidth="@dimen/employee_card_stroke_width"
    app:strokeColor="@color/card_stroke_color"
    tools:cardBackgroundColor="@color/surface_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/employee_card_background"
        android:padding="@dimen/employee_card_padding">

        <!-- ==================== MAIN EMPLOYEE INFORMATION SECTION ==================== -->
        
        <!--
            Primary Employee Information Container
            Features: Optimized constraint layout for employee overview
            Performance: Efficient view hierarchy with minimal nesting
        -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_layout_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/employee_card_min_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/container_info_adicional">

            <!--
                Professional Employee Avatar
                Features: Circular image with professional styling and fallback
                Accessibility: Proper content description and contrast
            -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_employee_avatar"
                android:layout_width="@dimen/employee_avatar_size"
                android:layout_height="@dimen/employee_avatar_size"
                android:layout_marginEnd="@dimen/avatar_margin_end"
                android:background="@drawable/avatar_background"
                android:contentDescription="@string/employee_photo_description"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_employee_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                app:strokeColor="@color/avatar_stroke_color"
                app:strokeWidth="@dimen/avatar_stroke_width"
                tools:src="@drawable/sample_employee_photo" />

            <!--
                Employee Information Container
                Features: Responsive text layout with professional typography
                Accessibility: Optimized text sizing and contrast ratios
            -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_employee_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/info_container_margin_start"
                android:layout_marginEnd="@dimen/info_container_margin_end"
                app:layout_constraintStart_toEndOf="@id/image_employee_avatar"
                app:layout_constraintEnd_toStartOf="@id/container_status_indicator"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!--
                    Employee Name with Birthday Indicator
                    Features: Professional typography with special occasion highlighting
                    Business Logic: Birthday detection with visual celebration
                -->
                <LinearLayout
                    android:id="@+id/layout_employee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0">

                    <TextView
                        android:id="@+id/text_employee_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textAppearance="@style/TextAppearance.EmployeeName"
                        android:textColor="@color/text_primary_on_surface"
                        android:textSize="@dimen/employee_name_text_size"
                        android:textStyle="bold"
                        tools:text="María González Rodríguez" />

                    <!--
                        Birthday Celebration Indicator
                        Features: Animated birthday icon with professional styling
                        Business Value: Team engagement and personal recognition
                    -->
                    <ImageView
                        android:id="@+id/image_birthday_indicator"
                        android:layout_width="@dimen/birthday_icon_size"
                        android:layout_height="@dimen/birthday_icon_size"
                        android:layout_marginStart="@dimen/birthday_icon_margin"
                        android:contentDescription="@string/birthday_celebration_description"
                        android:src="@drawable/ic_birthday_celebration"
                        android:visibility="gone"
                        app:tint="@color/birthday_celebration_color"
                        tools:visibility="visible" />

                </LinearLayout>

                <!--
                    Employee Status Display
                    Features: Advanced marquee text with professional overflow handling
                    Performance: Optimized text rendering with smooth scrolling
                -->
                <TextView
                    android:id="@+id/text_employee_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/status_text_margin_top"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:gravity="start"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.EmployeeStatus"
                    android:textColor="@color/text_secondary_on_surface"
                    android:textSize="@dimen/employee_status_text_size"
                    app:layout_constraintTop_toBottomOf="@id/layout_employee_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="En reunión con cliente - Proyecto importante" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--
                Professional Status Indicator Container
                Features: Circular progress integration with status visualization
                Business Logic: Real-time progress tracking with visual feedback
            -->
            <FrameLayout
                android:id="@+id/container_status_indicator"
                android:layout_width="@dimen/status_indicator_container_size"
                android:layout_height="@dimen/status_indicator_container_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!--
                    Advanced Circular Progress Indicator
                    Features: Professional progress visualization with status correlation
                    Business Value: Real-time task completion tracking
                -->
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/progress_bar_employee"
                    android:layout_width="@dimen/progress_bar_size"
                    android:layout_height="@dimen/progress_bar_size"
                    android:layout_gravity="center"
                    app:cpb_background_progressbar_color="@color/progress_background_color"
                    app:cpb_background_progressbar_width="@dimen/progress_background_width"
                    app:cpb_progress="0"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="@color/progress_primary_color"
                    app:cpb_progressbar_width="@dimen/progress_foreground_width"
                    app:cpb_round_border="true"
                    tools:cpb_progress="75" />

                <!--
                    Dynamic Status Icon
                    Features: Professional status visualization with automatic theming
                    Business Logic: Status-based icon selection with accessibility support
                -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_status_indicator"
                    android:layout_width="@dimen/status_icon_size"
                    android:layout_height="@dimen/status_icon_size"
                    android:layout_gravity="center"
                    android:background="@drawable/status_icon_background"
                    android:contentDescription="@string/employee_status_description"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_status_available"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    tools:src="@drawable/ic_status_meeting" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ==================== EXPANDABLE DETAILED INFORMATION SECTION ==================== -->
        
        <!--
            Professional Expandable Information Container
            Features: Smooth expand/collapse with comprehensive employee details
            Business Value: Progressive disclosure for detailed employee information
        -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/container_info_adicional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/expandable_section_margin_top"
            android:visibility="gone"
            app:cardBackgroundColor="@color/expandable_section_background"
            app:cardCornerRadius="@dimen/expandable_section_corner_radius"
            app:cardElevation="@dimen/expandable_section_elevation"
            app:layout_constraintTop_toBottomOf="@id/item_layout_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/expandable_section_padding">

                <!--
                    Professional Employee Details Section
                    Features: Comprehensive information display with professional styling
                    Accessibility: Proper text sizing and contrast for enterprise use
                -->
                
                <!-- Employment Information -->
                <TextView
                    android:id="@+id/text_employment_info_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/employment_information"
                    android:textAppearance="@style/TextAppearance.DetailSection.Header"
                    android:textColor="@color/section_header_color"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Hire Date -->
                <LinearLayout
                    android:id="@+id/layout_hire_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detail_item_margin_top"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/text_employment_info_header"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="@dimen/detail_icon_size"
                        android:layout_height="@dimen/detail_icon_size"
                        android:layout_marginEnd="@dimen/detail_icon_margin"
                        android:contentDescription="@string/hire_date_icon"
                        android:src="@drawable/ic_calendar_start"
                        app:tint="@color/detail_icon_color" />

                    <TextView
                        android:id="@+id/text_hire_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.DetailItem"
                        android:textColor="@color/detail_text_color"
                        tools:text="Fecha de ingreso: 15 de marzo, 2021" />

                </LinearLayout>

                <!-- Extension Number -->
                <LinearLayout
                    android:id="@+id/layout_extension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detail_item_spacing"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/layout_hire_date"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="@dimen/detail_icon_size"
                        android:layout_height="@dimen/detail_icon_size"
                        android:layout_marginEnd="@dimen/detail_icon_margin"
                        android:contentDescription="@string/extension_icon"
                        android:src="@drawable/ic_phone_extension"
                        app:tint="@color/detail_icon_color" />

                    <TextView
                        android:id="@+id/text_extension_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.DetailItem"
                        android:textColor="@color/detail_text_color"
                        tools:text="Anexo: 1234" />

                </LinearLayout>

                <!-- Communication Section -->
                <TextView
                    android:id="@+id/text_communication_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/section_spacing"
                    android:text="@string/communication_channels"
                    android:textAppearance="@style/TextAppearance.DetailSection.Header"
                    android:textColor="@color/section_header_color"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/layout_extension"
                    app:layout_constraintStart_toStartOf="parent" />

                <!--
                    Professional Phone Contact Component
                    Features: Clickable phone number with professional styling
                    Business Value: Direct communication channel for team coordination
                -->
                <LinearLayout
                    android:id="@+id/layout_phone_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detail_item_margin_top"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/clickable_item_padding"
                    app:layout_constraintTop_toBottomOf="@id/text_communication_header"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="@dimen/communication_icon_size"
                        android:layout_height="@dimen/communication_icon_size"
                        android:layout_marginEnd="@dimen/communication_icon_margin"
                        android:contentDescription="@string/phone_call_icon"
                        android:src="@drawable/ic_phone_call"
                        app:tint="@color/phone_action_color" />

                    <TextView
                        android:id="@+id/text_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.CommunicationItem"
                        android:textColor="@color/phone_action_color"
                        tools:text="Teléfono: +56 9 1234 5678" />

                </LinearLayout>

                <!--
                    Professional WhatsApp Integration Component
                    Features: Direct WhatsApp integration with professional styling
                    Business Value: Modern communication channel for instant messaging
                -->
                <LinearLayout
                    android:id="@+id/layout_whatsapp_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detail_item_spacing"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/clickable_item_padding"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/layout_phone_contact"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/icon_whatsapp"
                        android:layout_width="@dimen/communication_icon_size"
                        android:layout_height="@dimen/communication_icon_size"
                        android:layout_marginEnd="@dimen/communication_icon_margin"
                        android:contentDescription="@string/whatsapp_message_icon"
                        android:src="@drawable/ic_whatsapp_professional"
                        app:tint="@color/whatsapp_action_color" />

                    <TextView
                        android:id="@+id/text_whatsapp_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/send_whatsapp_message"
                        android:textAppearance="@style/TextAppearance.CommunicationItem"
                        android:textColor="@color/whatsapp_action_color"
                        android:textStyle="bold" />

                </LinearLayout>

                <!--
                    Professional Expand/Collapse Indicator
                    Features: Visual feedback for expandable state
                    UX: Clear indication of interaction capability
                -->
                <ImageView
                    android:id="@+id/icon_expand_collapse"
                    android:layout_width="@dimen/expand_icon_size"
                    android:layout_height="@dimen/expand_icon_size"
                    android:layout_marginTop="@dimen/expand_icon_margin_top"
                    android:contentDescription="@string/expand_collapse_description"
                    android:src="@drawable/ic_expand_more"
                    app:layout_constraintTop_toBottomOf="@id/layout_whatsapp_contact"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/expand_icon_color" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
